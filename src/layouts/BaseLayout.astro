---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  isHome?: boolean;
}

const { title, description, isHome = false } = Astro.props;
const siteTitle = 'User Hat SEO';
const pageTitle = isHome ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={description} />
  <link rel="icon" type="image/png" href="/userhat-icon.png" />
  <link rel="sitemap" href="/sitemap-index.xml" />

  <!-- Google Fonts for brutalist typography -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700&family=Inter:wght@400;600&family=JetBrains+Mono&display=swap" rel="stylesheet">

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-C7RN08TXX6"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-C7RN08TXX6', { anonymize_ip: true });
  </script>
</head>
<body>
  <slot />
</body>
</html>
