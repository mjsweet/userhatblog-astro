---
interface Props {
  isHome?: boolean;
}

const { isHome = false } = Astro.props;
const siteTitle = 'User Hat';
---

<div class="site-wrapper">
  <header class="site-header">
    {isHome ? (
      <div class="header-home">
        <div class="logo-container">
          <div class="logo-placeholder">UH</div>
        </div>
        <h1 class="site-title-large">
          <a href="/">{siteTitle}</a>
        </h1>
      </div>
    ) : (
      <div class="header-inner">
        <div class="logo-container-small">
          <div class="logo-placeholder-small">UH</div>
        </div>
        <h3 class="site-title-small">
          <a href="/">{siteTitle}</a>
        </h3>
      </div>
    )}
  </header>

  <main class="site-content">
    <slot />
  </main>
</div>

<style>
  .site-wrapper {
    max-width: var(--container-reading);
    margin: 0 auto;
    padding: var(--space-6) var(--space-3);
    border-left: var(--border-thick) solid var(--colour-black);
    border-right: var(--border-thick) solid var(--colour-black);
    min-height: 100vh;
  }

  .site-header {
    margin-bottom: var(--space-8);
    position: relative;
  }

  /* Brutalist overlapping header */
  .header-home {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-3);
    align-items: center;
    padding: var(--space-4);
    border: var(--border-chunky) solid var(--colour-black);
    background-color: var(--colour-white);
    position: relative;
  }

  .logo-container {
    width: 4rem;
    height: 4rem;
    border: var(--border-medium) solid var(--colour-black);
    background-color: var(--colour-accent-highlight);
    padding: var(--space-2);
    transform: rotate(-3deg);
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-placeholder {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: var(--text-lg);
  }

  .site-title-large {
    font-size: var(--text-3xl);
    margin: 0;
    position: relative;
  }

  .site-title-large a {
    border: none;
    color: var(--colour-black);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .site-title-large a:hover {
    background-color: var(--colour-accent-primary);
    color: var(--colour-white);
  }

  /* Inner page header */
  .header-inner {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    border: var(--border-medium) solid var(--colour-black);
    background-color: var(--colour-grey-light);
  }

  .logo-container-small {
    width: 2rem;
    height: 2rem;
    border: var(--border-thin) solid var(--colour-black);
    background-color: var(--colour-white);
    padding: var(--space-1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-placeholder-small {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: var(--text-xs);
  }

  .site-title-small {
    font-size: var(--text-lg);
    margin: 0;
    font-family: 'Space Grotesk', sans-serif;
    text-transform: uppercase;
  }

  .site-title-small a {
    border: none;
    color: var(--colour-black);
  }
</style>
